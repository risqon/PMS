<% include ../partials/header %>
<h1 class="h2 mt-2">Profile</h1>
<form class="container" method="POST">
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email"
            value="<%= data.email%>" disabled>
        </div>
    </div>
    <div class="form-group row was-validated">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
    </div>
    <fieldset class="form-group">
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Position</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="position" id="manager" 
                    value="Manager" <%= data.position == 'Manager' ? 'checked' : '' %>>
                    <label class="form-check-label" for="manager">
                        Manager
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="position" id="softwareDeveloper" 
                    value="Software Developer" <%= data.position == 'Software Developer' ? 'checked' : '' %>>
                    <label class="form-check-label" for="softwareDeveloper">
                        Software Developer
                    </label>
                </div>
                <div class="form-check disabled">
                    <input class="form-check-input" type="radio" name="position" id="qualityAssurance" 
                    value="Quality Assurance" <%= data.position == 'Quality Assurance' ? 'checked' : '' %>>
                    <label class="form-check-label" for="Quality Assurance">
                        Quality Assurance
                    </label>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="form-group row">
        <div class="col-sm-2">Type</div>
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="type" id="fulltime" 
                value="Full Time" <%= data.typejob == 'Full Time' ? 'checked' : '' %>>
                <label class="form-check-label" for="fulltime">
                    Fulltime
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="type" id="parttime" 
                value="Part Time" <%= data.typejob == 'Part Time' ? 'checked' : '' %>>
                <label class="form-check-label" for="parttime">
                    Parttime
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>
<% include ../partials/footer %>